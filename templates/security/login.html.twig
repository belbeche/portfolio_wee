{% extends 'base.html.twig' %}

{% block title %}Connexion
{% endblock %}

{% block content %}

	{% if error %}
		<div class="alert alert-danger">{{ error.messageKey }}</div>
	{% endif %}

	{% if app.user %}
		<div class="mb-3">
			Vous êtes connecté en tant que
			{{ app.user.userIdentifier }},
			<a href="{{ path('app_logout') }}">Déconnexion</a>
		</div>
	{% endif %}

	<div class="container col-xl-10 col-xxl-8 px-4 py-5">
		<div class="row align-items-center g-lg-5 py-5">
			<div class="col-lg-7 text-center text-lg-start">
				<h1 class="display-4 fw-bold lh-1 mb-3">Heureux de vous revoir !</h1>
				<div class="register">
					<h6>Vous n'ètes pas membre ?</h6>
					<p>Inscrivez-vous en suivant ce lien <a href="{{ url('app_register') }}">Je m'inscris</a>.</p>
				</div>
			</div>
			<div class="col-md-10 mx-auto col-lg-5">
				<form class="p-4 p-md-5 border rounded-3 bg-light" method="post" action="{{ url('app_login')}}">
					<div class="form-floating mb-3">
						<input type="email" class="form-control" value="{{ last_username }}" id="floatingInput" placeholder="l'adresse saisie pour l'inscription" name="email">
						<label for="floatingInput">Email adresse</label>
					</div>
					<div class="form-floating mb-3">
						<input type="password" class="form-control" id="floatingPassword" placeholder="Mot de passe" name="password">
						<label for="floatingPassword">Mot de passe</label>
					</div>
					<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
					<div class="checkbox mb-3">
						<label>
							<input type="checkbox" name="_remember_me">
							Se souvenir de moi
						</label>
					</div>
					<button class="w-100 btn btn-lg btn-primary" type="submit">
						Me connecter
					</button>
				</form>
			</div>
		</div>
	</div>
{% endblock %}
