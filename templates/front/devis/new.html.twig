	<script>
		document.addEventListener('DOMContentLoaded', function () {
			var form = document.getElementById('form_new_devis');
			var submitButton = document.getElementById('cursor_form_success');

			form.addEventListener('input', function () {
				// Vérifiez si tous les champs du formulaire sont valides
				var isValid = form.checkValidity();

				// Ajoutez ou supprimez la classe Bootstrap 'btn-success' en fonction de la validité
				if (isValid) {
					submitButton.classList.add('btn', 'btn-success');
				} else {
					submitButton.classList.remove('btn', 'btn-success');
				}
			});
		});
