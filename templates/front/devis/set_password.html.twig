{% extends 'base.html.twig' %}

{% block title %}Définir un mot de passe{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <h1>Définissez votre mot de passe</h1>
                <p>Veuillez définir un mot de passe pour le suivi de votre demande de devis.</p>

                {{ form_start(form) }}
                <div class="mb-3">
                    {{ form_label(form.password, 'Mot de passe') }}
                    {{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.password) }}
                </div>
                <button type="submit" class="btn btn-primary">Définir le mot de passe</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
