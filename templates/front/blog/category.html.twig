{% extends 'base.html.twig' %}

{% block title %}Articles dans la catégorie "{{ category.name }}"{% endblock %}

{% block content %}
<div class="container mt-6">
    <h1 class="text-center mb-4">Catégorie : {{ category.name }}</h1>

    <!-- Liste des articles -->
    <div class="row g-4">
        {% for post in posts %}
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 shadow-sm border-0">
                    {# {% if post.image %}
                        <img src="{{ asset('uploads/' ~ post.image) }}" class="card-img-top" alt="{{ post.title }}">
                    {% endif %} #}
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">{{ post.title }}</h5>
                        <p class="card-text text-muted small">
                            Publié le {{ post.createdAt|date('d/m/Y') }}
                        </p>
                        <p class="card-text flex-grow-1">
                            {{ post.content|striptags|slice(0, 120) ~ '...' }}
                        </p>
                        <a href="{{ path('blog_show', { slug: post.slug }) }}" class="btn btn-primary mt-auto">Lire la suite</a>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <p class="text-center text-muted">Aucun article trouvé pour cette catégorie.</p>
            </div>
        {% endfor %}
    </div>

    <!-- Retour à toutes les catégories -->
    <div class="text-center mt-5">
        <a href="{{ path('blog_index') }}" class="btn btn-secondary">Retour à toutes les catégories</a>
    </div>
</div>
{% endblock %}
