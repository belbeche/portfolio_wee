{% extends 'base.html.twig' %}


{% block content %}

	<div class="container">
		{% for type, messages in app.flashes %}
			{% for message in messages %}
				<div class="alert alert-{{ type }}">{{ message }}</div>
			{% endfor %}
		{% endfor %}
	</div>

	<!-- Slider
		============================================= -->
	<section id="slider" class="slider-element bg-color">
		<div class="container">
			<div class="row h-100">
				<div class="col-lg-6 d-flex align-self-center flex-column pt-5 pb-0 py-lg-6 mb-0 my-lg-4">
					<p class="mb-3 text-larger fw-light">Gardez un oeil sur vos activités</p>
					<h2 class="display-4" style="font-weight: 800">Bienvenue à notre support en ligne inter connecté.</h2>
					<div class="input-group input-group-lg mt-2 mb-4">
						{{ render(controller('App\\Controller\\Front\\FrontController::search')) }}
					</div>
					<div>
						<a href="{{ url('front_articles_new') }}" class="button button-large border border-width-2 bg-alt py-2 rounded-1 fw-medium text-transform-none ls-0 ms-0 ms-sm-1 h-op-09"><i class="bi-file-earmark-plus"></i>Créer un nouveau sujet</a>
						<a href="{{ url('front_blog') }}" class="button button-large button-border rounded-1 fw-medium text-transform-none h-bg-alt ls-0 ms-0"><i class="bi-text-left"></i>Voir tous les sujets</a>
					</div>
				</div>

				<div class="col-lg-6 d-flex align-self-end flex-column">
					<img src="src/css/images/hero.svg" alt="Hero Image" style="z-index: 3; transform: translateY(45px);">
				</div>
			</div>
		</div>
		<div class="bg-alt py-5">
			<div class="container">
				<div class="d-flex">
					<h4 class="mb-0"><span class="fw-normal text-white"><i class="bi-people icon-fw"></i></span> <span class="text-white">Membres enregistrès</span>  <span class="color fw-semibold">{{ users|length}}</span>.</span></h4>
					<h4 class="mb-0 ms-5"><span class="fw-normal text-white"><i class="bi-chat-dots icon-fw "></i> <span class="text-white">Sujets créer</span>  <span class="color fw-semibold">{{ articles|length}}</span>.</span></h4>
				</div>
			</div>
		</div>
	</section>

	<!-- Content
		============================================= -->
	<section id="content">
		<div class="content-wrap">
			<div class="container">

				<div class="row justify-content-center text-center mb-5">
					<div class="col-xl-6 col-lg-8">
						<h3 class="display-4 fw-bolder mb-3">Dernières discussion</h3>
						<a href="{{ url('front_articles_new') }}" class="button button-small button-border button-rounded  mx-0">Créer un nouveau sujet</a>
					</div>
				</div>

				<div class="mw-md mx-auto">
					<ul class="list-unstyled mb-4">
						<li>
							{% for article in articles %}
								<ul class="topic list-unstyled row mx-0 justify-content-between align-items-center">
										<li class="entry mb-0 col-sm-10">
											<a href="{{ path('front_articles_show', {'slug': article.slug}) }}" class="link-dark">
												<h3 class="card-title">{{ article.title }}</h3>
											</a>
											<div class="entry-meta mt-1">
												<ul>
													<li><a href="#">{{ article.createdAt|format_datetime('medium', locale="fr") }}</a></li>
													<li><a href="#">{{ article.commentaires|length }}</a></li>
													{#<li><a href="#" class="badge bg-info text-white">In Progress</a></li>#}
												</ul>
											</div>
										</li>
										<li class="col-sm-2">
											<div class="bbp-author">
												<img src="{{ asset('uploads/avatar/' ~article.user.avatar) }}" alt="{{ article.user.username }}" class="rounded-circle me-2" width="50" height="50">
													{{ article.user.username }}
											</div>
										</li>
								</ul>
							{% endfor %}
						</li>
					</ul>

					<div class="navigation pagination justify-content-center my-4">
						{{ knp_pagination_render(articles) }}
					</div>
				</div>

			</div>

