<header id="header">
    <nav class="navbar navbar-expand-lg fixed-top container-fluid text-white">
        <!-- Logo -->
        <div class="logo">
            <a href="{{ url('front_home') }}">
                <img src="{{ asset('img/logo.png') }}" class="d-sm-none d-md-none d-lg-block ml-5" width="15%" alt="Agence web à Avallon (89200)">
            </a>
            <a href="{{ url('front_home') }}">
                <div class="text-white d-md-block d-lg-none d-sm-block fw-bold" style="font-size: 1rem;margin-left: 21px!important;">ScriptZenIT</div>
            </a>
        </div>

        <!-- Burger Menu -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMenu" aria-controls="navbarMenu" aria-expanded="false" aria-label="Toggle navigation">
            <div class="list mt-3">
                <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="white" class="bi bi-list" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M2.5 12a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5m0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5m0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5"/>
                </svg>
            </div>
        </button>

        <!-- Menu -->
        <div class="collapse navbar-collapse" id="navbarMenu">
            <ul class="navbar-nav ms-auto menu_mobile"> <!-- Couleur des menus -->
                <li class="nav-item {{ app.request.get('_route') == 'front_home' ? 'active' : '' }}">
                    <a class="nav-link" href="{{ url('front_home') }}">Accueil</a>
                </li>
                <li class="nav-item {{ app.request.get('_route') == 'front_member_index' ? 'active' : '' }}">
                    <a class="nav-link" href="{{ url('front_member_index') }}">A propos</a>
                </li>
                <li class="nav-item {{ app.request.get('_route') == 'front_project' ? 'active' : '' }}">
                    <a class="nav-link" href="{{ url('front_project') }}">Nos réalisations</a>
                </li>
                <li class="nav-item {{ app.request.get('_route') == 'front_devis_new' ? 'active' : '' }}">
                    <a class="nav-link" href="{{ url('front_devis_new') }}">Faire une demande</a>
                </li>
                <div class="user">
                    {% if not app.user %}
                        <li class="nav-item {{ app.request.get('_route') == 'app_register' ? 'active' : '' }}">
                            <a class="nav-link" href="{{ url('app_register') }}">S'inscrire</a>
                        </li>
                        <li class="nav-item {{ app.request.get('_route') == 'app_login' ? 'active' : '' }}">
                            <a class="nav-link" href="{{ url('app_login') }}">Connexion</a>
                        </li>
                    {% endif %}
                </div>
                {% if is_granted('ROLE_ADMIN') %}
                    <li class="nav-item {{ app.request.get('_route') == 'back_index' ? 'active' : '' }}">
                        <a class="nav-link" href="{{ url('back_index') }}">Admin panel</a>
                    </li>
                {% endif %}
                {% if app.user %}
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Mon compte
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" style="z-index: 1080;">
                            <li class="menu-item {{ app.request.get('_route') == 'front_assistance' ? 'active' : '' }}">
                                <a class="dropdown-item text-black" href="{{ url('front_assistance') }}">Profil</a>
                            </li>
                            <li class="menu-item {{ app.request.get('_route') == 'front_profile_project' ? 'active' : '' }}">
                                <a class="dropdown-item text-black" href="{{ url('front_profile_project') }}">Mes projets</a>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li class="menu-item {{ app.request.get('_route') == 'app_logout' ? 'active' : '' }}">
                                <a class="btn btn-outline-danger dropdown-item text-black" href="{{ url('app_logout') }}">Déconnexion</a>
                            </li>
                        </ul>
                    </li>
                {% endif %}
            </ul>
        </div>
    </nav>
</header>
