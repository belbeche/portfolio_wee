                    <a href="{{ url('front_contact') }}">Obtenez votre audit gratuit</a>
                    <a href="{{ url('front_devis_new') }}">Demandez un devis personnalisé</a>
                </div>
            </div>

            <div class="col-lg-5 col-md-12 d-flex justify-content-center mt-4 mb-4 mt-lg-0">
                <div class="rounded shadow-lg bg-light p-4" style="width: 100%; max-width: 400px;">
                    {% if app.request.query.get('submitted') %}
                        <div id="successMessage" class="alert alert-success text-center">
                            Votre demande a été enregistrée avec succès. Nous vous rappellerons bientôt !
                        </div>
                    {% else %}
                        <div id="callbackForm">
                            {{ form_start(form, {'attr': {'class': 'needs-validation'}, 'method': 'POST'}) }}
                                <div class="form-floating mb-3">
                                    {{ form_row(form.name, {'attr': {'class': 'form-control', 'id': 'name', 'placeholder': 'Votre nom'}}) }}
                                    {{ form_errors(form.name) }}
                                </div>
                                <div class="form-floating mb-3">
                                    {{ form_row(form.phonePrefix, {'attr': {'class': 'select2', 'id': 'phonePrefix'}}) }}
                                    {{ form_errors(form.phonePrefix) }}
                                </div>
                                <div class="form-floating mb-3">
                                    {{ form_row(form.phone, {'attr': {'class': 'form-control', 'id': 'phone', 'placeholder': 'Votre téléphone'}}) }}
                                    {{ form_errors(form.phone) }}
                                </div>
                                <div class="form-floating mb-3">
                                    {{ form_row(form.email, {'attr': {'class': 'form-control', 'id': 'email', 'placeholder': 'Votre email'}}) }}
                                    {{ form_errors(form.email) }}
                                </div>
                                <button type="submit" id="submitButton" class="btn btn-primary w-100">
                                    Me faire rappeler
                                </button>
                            {{ form_end(form) }}
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Initialiser Select2 sur les champs avec la classe "select2"
        $('.select2').select2({
            placeholder: 'Sélectionnez un indicatif',
            allowClear: true,
            tags: true, // Permet d'ajouter une nouvelle option
            width: '100%'
        });
    });
</script>

<script>
    document.querySelector('#callbackForm').addEventListener('submit', function (e) {
        const phone = document.querySelector('#phone').value;
        const email = document.querySelector('#email').value;
        const phoneRegex = /^(\+33|0)[1-9](\d{2}){4}$/;
        const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;

        if (!phoneRegex.test(phone)) {
            alert('Veuillez saisir un numéro de téléphone valide.');
            e.preventDefault();
            return false;
        }

        if (!emailRegex.test(email)) {
            alert('Veuillez saisir une adresse email valide.');
            e.preventDefault();
            return false;
        }
    });

</script>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const successMessage = document.getElementById('successMessage');
        const callbackForm = document.getElementById('callbackForm');

