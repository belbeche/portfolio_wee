                    <a href="{{ url('front_contact') }}" class="btn-primary text-black">Contacter l'agence</a>
                    <a href="{{ url('front_devis_new')}}" class="btn-secondary text-black">Je veux me faire accompagner</a>
                </div>
            </div>
            <div class="col-md-10 mx-auto col-lg-5 rounded shadow-lg position-relative">
                <div id="successMessage" class="alert alert-success" style="display: none;">
                    Votre demande a été envoyée avec succès !
                </div>

                <div id="callbackForm">
                    {{ form_start(form, {'attr': {'class': 'p-4 p-md-5 border rounded-3 bg-form'}, 'method': 'POST'}) }}

                        <div class="form-floating mb-4">
                            {{ form_widget(form.name, {'attr': {'class': 'form-control shadow-sm', 'id': 'name'}}) }}
                            {{ form_label(form.name, null, {'attr': {'class': 'text-dark'}}) }}
                        </div>
                        <div class="form-floating mb-4">
                            {{ form_widget(form.phone, {'attr': {'class': 'form-control shadow-sm', 'id': 'phone'}}) }}
                            {{ form_label(form.phone, null, {'attr': {'class': 'text-dark'}}) }}
                        </div>
                        <div class="form-floating mb-4">
                            {{ form_widget(form.email, {'attr': {'class': 'form-control shadow-sm', 'id': 'email'}}) }}
                            {{ form_label(form.email, null, {'attr': {'class': 'text-dark'}}) }}
                        </div>
                        <button type="submit" id="submitButton">
                            Me faire rappeler
                        </button>
                    {{ form_end(form) }}
                </div>
                
                <small class="mt-3 d-block text-center" style="font-size: 20px;">
                    En cliquant sur "Me faire rappeler", vous acceptez nos conditions d'utilisation.
                </small>
            </div>
        </div>
    </section>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const form = document.querySelector('#callbackForm form');
            const submitButton = document.getElementById('submitButton');
            const successMessage = document.getElementById('successMessage');
            const inputs = form.querySelectorAll('input');

            function validateInput(input) {
                if (input.value.trim() === '') {
                    input.classList.remove('is-valid');
                    input.classList.add('is-invalid');
                } else {
                    input.classList.remove('is-invalid');
                    input.classList.add('is-valid');
                }
            }

            inputs.forEach(input => {
                input.addEventListener('input', () => validateInput(input));
            });

            form.addEventListener('submit', function (e) {

                let allValid = true;
                inputs.forEach(input => {
                    validateInput(input);
                    if (input.classList.contains('is-invalid')) {
                        allValid = false;
                    }
                });

                if (allValid) {
                    // Simuler l'envoi du formulaire
                    form.style.display = 'none';
                    successMessage.style.display = 'block';

                    // En production, réactiver la soumission :
                    // form.submit();
                }
            });
        });
    </script>



