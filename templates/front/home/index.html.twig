<!-- Hero Section -->
<section id="hero" class="container-fluid text-white position-relative bg-primary" style="min-height: 100vh;">
    <!-- Particles Background -->
    <div id="particles-js" class="position-absolute w-100 h-100"></div>

    <!-- Content -->
    <div class="d-flex align-items-center position-relative" style="min-height: 100vh;">
        <div class="row w-100 mx-0 align-items-center">
            <!-- Texte et boutons -->
            <div class="col-lg-7 col-md-12 d-flex flex-column justify-content-center px-4 px-md-5 text-center text-lg-start mb-4 mb-lg-0 intro_mobile">
                <h1 class="display-4 fw-bold mb-4">
                    Votre Agence Web <span class="text-warning">Dans l'Yonne</span>
                </h1>
                <p class="fs-5 mb-4 text-white">
                    Envie de donner un nouveau souffle à votre stratégie digitale ? Chez <strong>ScriptzenIT</strong>, nous combinons innovation et expertise pour vous accompagner dans la <strong>création de sites web professionnels</strong>, le <strong>développement d'applications sur mesure</strong>, et l’<strong>optimisation de votre présence en ligne</strong>.
                </p>
                <p class="fs-5 mb-4 text-white">
                    Faites confiance à une équipe d'experts passionnés pour transformer vos défis numériques en succès mesurables. Grâce à nos outils et technologies de pointe, nous vous aidons à propulser votre activité tout en restant compétitif dans un monde digital en constante évolution.
                </p>
                <div class="d-flex flex-column flex-md-row gap-3 justify-content-center">
                    <a href="{{ url('front_contact') }}" class="btn btn-warning btn-lg">Obtenez votre audit gratuit</a>
                    <a href="{{ url('front_devis_new') }}" class="btn btn-outline-light btn-lg">Demandez un devis personnalisé</a>
                </div>
            </div>

            <!-- Formulaire -->
            <div class="col-lg-5 col-md-12 d-flex justify-content-center mt-4 mb-4 mt-lg-0">
                <div class="rounded shadow-lg bg-light p-4" style="width: 100%; max-width: 400px;">
                    <div id="successMessage" class="alert alert-success" style="display: none;">
                        Votre demande a été envoyée avec succès !
                    </div>
                    <div id="callbackForm">
                        {{ form_start(form, {'attr': {'class': 'needs-validation'}, 'method': 'POST'}) }}
                            <div class="form-floating mb-3">
                                {{ form_widget(form.name, {'attr': {'class': 'form-control', 'id': 'name', 'placeholder': 'Votre nom'}}) }}
                                {{ form_label(form.name, 'Votre nom', {'attr': {'class': 'form-label'}}) }}
                            </div>
                            <div class="form-floating mb-3">
                                {{ form_widget(form.phone, {'attr': {'class': 'form-control', 'id': 'phone', 'placeholder': 'Votre téléphone'}}) }}
                                {{ form_label(form.phone, 'Votre téléphone', {'attr': {'class': 'form-label'}}) }}
                            </div>
                            <div class="form-floating mb-3">
                                {{ form_widget(form.email, {'attr': {'class': 'form-control', 'id': 'email', 'placeholder': 'Votre email'}}) }}
                                {{ form_label(form.email, 'Votre email', {'attr': {'class': 'form-label'}}) }}
                            </div>
                            <button type="submit" id="submitButton" class="btn btn-primary w-100">
                                Me faire rappeler
                            </button>
                        {{ form_end(form) }}
                    </div>
                    <small class="mt-3 d-block text-center text-dark" style="font-size: 14px;">
                        En cliquant sur "Me faire rappeler", vous acceptez nos conditions d'utilisation.
                    </small>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        particlesJS("particles-js", {
            "particles": {
                "number": {
                    "value": 80,
                    "density": {
                        "enable": true,
                        "value_area": 800
                    }
                },
                "color": {
                    "value": "#ffffff"
                },
                "shape": {
                    "type": "circle",
                    "stroke": {
                        "width": 0,
                        "color": "#000000"
                    },
                    "polygon": {
                        "nb_sides": 5
                    }
                },
                "opacity": {
                    "value": 0.5,
                    "anim": {
                        "enable": false
                    }
                },
                "size": {
                    "value": 3,
                    "random": true
                },
                "line_linked": {
                    "enable": true,
                    "distance": 150,
                    "color": "#ffffff",
                    "opacity": 0.4,
                    "width": 1
                },
                "move": {
                    "enable": true,
                    "speed": 6,
                    "direction": "none",
                    "random": false
                }
            },
            "interactivity": {
                "detect_on": "canvas",
                "events": {
                    "onhover": {
                        "enable": true,
                        "mode": "grab"
                    },
                    "onclick": {
                        "enable": true,
                        "mode": "push"
                    }
                },
                "modes": {
                    "grab": {
                        "distance": 140,
                        "line_linked": {
                            "opacity": 1
                        }
                    }
                }
            },
            "retina_detect": true
        });
    });
</script>

