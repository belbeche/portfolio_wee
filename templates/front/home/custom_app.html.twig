{% extends 'base.html.twig' %}

{% block title %}{{ 'custom_app_title'|trans }}{% endblock %}

{% block content %}
<div class="container mt-6">
    <h1 class="mb-5 text-center">{{ 'custom_app_heading'|trans }}</h1>
    <p class="lead text-center mb-5">
        {{ 'custom_app_intro'|trans }}
    </p>
    
    <!-- Section présentation -->
    <div class="row mb-5">
        <div class="col-md-6">
            <h3>{{ 'custom_app_why_title'|trans }}</h3>
            <ul>
                <li><strong>{{ 'custom_app_why_personalization'|trans }}</strong> {{ 'custom_app_why_personalization_desc'|trans }}</li>
                <li><strong>{{ 'custom_app_why_cost_optimization'|trans }}</strong> {{ 'custom_app_why_cost_optimization_desc'|trans }}</li>
                <li><strong>{{ 'custom_app_why_scalability'|trans }}</strong> {{ 'custom_app_why_scalability_desc'|trans }}</li>
                <li><strong>{{ 'custom_app_why_competitive_advantage'|trans }}</strong> {{ 'custom_app_why_competitive_advantage_desc'|trans }}</li>
            </ul>
        </div>
        <div class="col-md-6">
            <img src="{{ asset('img/custom_app.jpg') }}" alt="{{ 'custom_app_image_alt'|trans }}" class="img-fluid shadow-sm rounded">
        </div>
    </div>

    <!-- Services -->
    <div class="row mb-5">
        <div class="col-12">
            <h2 class="mb-4 text-center">{{ 'custom_app_services_title'|trans }}</h2>
        </div>
        <div class="col-md-6">
            <h4 class="text-primary">{{ 'custom_app_service_1_title'|trans }}</h4>
            <p>{{ 'custom_app_service_1_desc'|trans }}</p>
        </div>
        <div class="col-md-6">
            <h4 class="text-primary">{{ 'custom_app_service_2_title'|trans }}</h4>
            <p>{{ 'custom_app_service_2_desc'|trans }}</p>
        </div>
        <div class="col-md-6 mt-4">
            <h4 class="text-primary">{{ 'custom_app_service_3_title'|trans }}</h4>
            <p>{{ 'custom_app_service_3_desc'|trans }}</p>
        </div>
        <div class="col-md-6 mt-4">
            <h4 class="text-primary">{{ 'custom_app_service_4_title'|trans }}</h4>
            <p>{{ 'custom_app_service_4_desc'|trans }}</p>
        </div>
    </div>

    <!-- Avantages -->
    <div class="row mb-5">
        <div class="col-12">
            <h2 class="mb-4 text-center">{{ 'custom_app_advantages_title'|trans }}</h2>
        </div>
        <div class="col-md-4 text-center">
            <i class="fas fa-cogs fa-3x text-primary mb-3"></i>
            <h5>{{ 'custom_app_advantage_1_title'|trans }}</h5>
            <p>{{ 'custom_app_advantage_1_desc'|trans }}</p>
        </div>
        <div class="col-md-4 text-center">
            <i class="fas fa-lock fa-3x text-primary mb-3"></i>
            <h5>{{ 'custom_app_advantage_2_title'|trans }}</h5>
            <p>{{ 'custom_app_advantage_2_desc'|trans }}</p>
        </div>
        <div class="col-md-4 text-center">
            <i class="fas fa-chart-line fa-3x text-primary mb-3"></i>
            <h5>{{ 'custom_app_advantage_3_title'|trans }}</h5>
            <p>{{ 'custom_app_advantage_3_desc'|trans }}</p>
        </div>
    </div>

    <!-- Appel à action -->
    <div class="text-center mt-5">
        <h3 class="mb-4">{{ 'custom_app_cta_heading'|trans }}</h3>
        <p>{{ 'custom_app_cta_description'|trans }}</p>
        <a href="{{ path('front_contact') }}" class="btn btn-primary btn-lg">{{ 'custom_app_cta_button'|trans }}</a>
    </div>
</div>
{% endblock %}
