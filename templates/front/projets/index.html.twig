{% extends 'base.html.twig' %}

{% block title %}Mes réalisations{% endblock %}

{% block content %}

    <h1>Page des réalisations</h1>

    <div class="container">
        <div class="row">
            {% for project in projects  %}
                <div class="col-md-3">
                    <div class="card" style="width: 18rem;">
                        {% for image in project.imagesProject %}
                            <img src="{{ asset('/upload_images_project/'~image.name) }}" class="card-img-top" alt="{{ image.name }}">
                        {% endfor %}
                        <div class="card-body">
                            <h5 class="card-title">{{ project.title }}</h5>
                            <p class="card-text">{{ project.description }}.</p>
                            <a href="{{ url('front_project_show', {id: project.id }) }}" class="btn btn-primary">Voir le projet</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}
