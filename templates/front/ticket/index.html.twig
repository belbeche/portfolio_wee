{% extends 'base_back.html.twig' %}

{% block title %}Gestion tickets{% endblock %}

{% block content %}
    <div class="container-fluid">
        <div class="table-responsive table-responsive-lg table-responsive-md">
            <table class="table table-sm">
                <thead class="thead-dark">
                <tr>
                    <th>Numéro</th>
                    <th>Email</th>
                    <th>Type de site web</th>
                    <th>Type de design</th>
                    <th>Description de la demande</th>
                    <th>Date de création</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for message in tickets %}
                    <tr>
                        <td>{{ message.id }}</td>
                        <td>{{ message.sender }}</td>
                        <td>{{ message.devis.typeDeSiteWeb }}</td>
                        <td>
                            {% for labelOfDesign in message.devis.attentesDesignWeb %}
                                {{ labelOfDesign.label }}{% if not loop.last %}, {% endif %}
                            {% endfor %}
                        </td>
                        <td>{{ message.content }}</td>
                        <td>{{ message.createdAt|date('Y-m-d H:i:s') }}</td>
                        <td>{{ message.status }}</td>
                        <td>
                            <a href="{{ path('respond_to_ticket', {'id': message.id}) }}" class="btn btn-outline-primary">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-folder-plus" viewBox="0 0 16 16">
                                    <path d="m.5 3 .04.87a1.99 1.99 0 0 0-.342 1.311l.637 7A2 2 0 0 0 2.826 14H9v-1H2.826a1 1 0 0 1-.995-.91l-.637-7A1 1 0 0 1 2.19 4h11.62a1 1 0 0 1 .996 1.09L14.54 8h1.005l.256-2.819A2 2 0 0 0 13.81 3H9.828a2 2 0 0 1-1.414-.586l-.828-.828A2 2 0 0 0 6.172 1H2.5a2 2 0 0 0-2 2Zm5.672-1a1 1 0 0 1 .707.293L7.586 3H2.19c-.24 0-.47.042-.683.12L1.5 2.98a1 1 0 0 1 1-.98h3.672Z"/>
                                    <path d="M13.5 9a.5.5 0 0 1 .5.5V11h1.5a.5.5 0 1 1 0 1H14v1.5a.5.5 0 1 1-1 0V12h-1.5a.5.5 0 0 1 0-1H13V9.5a.5.5 0 0 1 .5-.5Z"/>
                                </svg>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
