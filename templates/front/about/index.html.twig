{% extends 'base.html.twig' %}

{% block title %}À propos{% endblock %}

{% block content %}
<div class="container-fluid text-center jumbotron">
    <h1>L'équipe</h1>
    <div class="page-subtitle">
        <h4>Découvrez notre équipe, notre expertise, et ce que nous pouvons vous apporter</h4>
        <a href="{{ path('front_contact') }}" target="_self" class="btn btn-primary btn-lg px-4 rounded-pill">Nous contacter</a>
    </div>
</div>

<div class="container d-flex justify-content-center">
    <div class="row">
        {% for member in members %}
            <div class="col-md-4">
                <div class="card">
                    <img src="{{ asset('uploads/avatar/'~ member.avatar) }}" class="card-img-top rounded-circle me-3 border border-width-3 border-white" alt="{{ member.lastname }} {{ member.firstname }}" width="120" height="120">
                    <div class="card-body">
                        <h5 class="card-title">{{ member.firstname }} {{ member.lastname }}</h5>
                        <h6 class="card-subtitle mb-2 text-body-secondary">{{ member.function }}</h6>
                        <p class="card-text">{{ member.description }}</p>
                        <a href="mailto:{{ member.email }}" class="card-link">Contact : {{ member.email }}</a>
                    </div> <!-- .card-body -->
                </div> <!-- .card -->
            </div> <!-- .col-md-4 -->
        {% endfor %}
    </div> <!-- .row -->
</div> <!-- .container -->
{% endblock %}
