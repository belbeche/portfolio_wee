{% extends "base.html.twig" %}

{% block title %}{{ subject.title }}{% endblock %}

{% block content %}
<section id="content">
    <div class="content-wrap">
        <div class="container mw-md">
            <!-- Détails du sujet -->
            <div class="topic-post">
                <div class="row g-0 justify-content-between align-items-center border-top border-bottom py-3 mb-4">
                    <div class="col-9">
                        <div class="d-flex align-items-center">
                            <img src="{{ asset('uploads/avatar/' ~ subject.user.avatar) }}" 
                                 alt="{{ subject.user.username }}" 
                                 class="rounded-circle me-2" 
                                 width="50" height="50">
                            <div>
                                <h5 class="mb-0 h6 fw-semibold">
                                    <a class="text-dark" href="#">{{ subject.user.username }}</a>
                                </h5>
                                <small class="text-muted">Posté le {{ subject.createdAt|date('d/m/Y H:i') }}</small>
                            </div>
                        </div>
                    </div>
                </div>
                <p>{{ subject.content|raw }}</p>
            </div>

            <!-- Formulaire de commentaire -->
            <div class="comment-form">
                {{ form_start(formComment) }}
                <div class="mb-3">
                    {{ form_label(formComment.content, 'Votre commentaire :', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(formComment.content, {'attr': {'class': 'form-control'}}) }}
                </div>
                <button type="submit" class="btn btn-primary">Ajouter un commentaire</button>
                {{ form_end(formComment) }}
            </div>

            <!-- Section des commentaires -->
            <div class="topic-post reply mt-5 p-4 border-top">
                <h3 class="h2 fw-bolder mb-4">Réponses au sujet</h3>
                {% for comment in comments %}
                    <div class="comment">
                        <p>{{ comment.content }}</p>
                        <p><small>Posté par {{ comment.user.username }} le {{ comment.createdAt|date('d/m/Y H:i') }}</small></p>

                        <!-- Formulaire de réponse -->
                        {% if app.user %}
                            <button type="button" class="btn btn-outline-secondary reply-button" data-comment-id="{{ comment.id }}">
                                Répondre
                            </button>

                            <div id="reply-form-{{ comment.id }}" class="reply-form" style="display:none;">
                                {{ form_start(replyForms[comment.id]) }}
                                <div class="mb-3">
                                    {{ form_label(replyForms[comment.id].content, 'Votre réponse :', {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(replyForms[comment.id].content, {'attr': {'class': 'form-control'}}) }}
                                </div>
                                <button type="submit" class="btn btn-primary">Répondre</button>
                                {{ form_end(replyForms[comment.id]) }}
                            </div>
                        {% endif %}

                        <!-- Affichage des réponses imbriquées -->
                        {% if comment.replies|length > 0 %}
                            <div class="replies pl-4 mt-3 border-start">
                                {% for reply in comment.replies %}
                                    {% include 'front/subject/_comment.html.twig' with {'comment': reply, 'replyForms': replyForms} %}
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>
                {% else %}
                    <p>Aucun commentaire pour le moment.</p>
                {% endfor %}
            </div>
        </div>
    </div>
</section>

<!-- Scripts JS -->
{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Gérer l'affichage des formulaires de réponse
            document.querySelectorAll('.reply-button').forEach(function(button) {
                button.addEventListener('click', function() {
                    const commentId = button.getAttribute('data-comment-id');
                    const replyForm = document.getElementById(`reply-form-${commentId}`);
                    if (replyForm) {
                        replyForm.style.display = 'block';
                    }
                });
            });
        });
    </script>
{% endblock %}
{% endblock %}
