{% extends "base.html.twig" %}

{% block title %} {{ subject.title }} {% endblock %}

{% block content %}
<section id="content">
    <div class="content-wrap">
        <div class="container mw-md">
            <!-- Subject Details -->
            <div class="topic-post">
                <div class="row g-0 justify-content-between align-items-center border-top border-bottom py-3 mb-4">
                    <div class="col-9">
                        <div class="d-flex align-items-center">
                            <img src="{{ asset('uploads/avatar/' ~ subject.user.avatar) }}" 
                                 alt="{{ subject.user.username }}" 
                                 class="rounded-circle me-2" 
                                 width="50" height="50">
                            <div>
                                <h5 class="mb-0 h6 fw-semibold">
                                    <a class="text-dark" href="#">{{ subject.user.username }}</a>
                                </h5>
                                <small class="text-muted">Posté le {{ subject.createdAt|format_datetime('full', 'short', locale='fr') }}</small>
                            </div>
                        </div>
                    </div>
                </div>
                <p>{{ subject.content|raw }}</p>
            </div>

            <!-- Comment Form -->
            {% if app.user %}
            <div class="comment-form mt-4">
                <h3 class="h2 fw-bolder mb-4">Laisser un Commentaire</h3>
                {{ form_start(form) }}
                    {{ form_widget(form.content) }}
                    <button type="submit" class="btn btn-secondary mt-2">Envoyer</button>
                {{ form_end(form) }}
            </div>
            {% endif %}

            <!-- Comment Section -->
            <div class="topic-post reply mt-5 p-4 border-top border-width-5 border-color">
                <h3 class="h2 fw-bolder mb-4">Commentaires</h3>
                {% for comment in comments %}
                    <div class="comment mb-4">
                        <div class="d-flex align-items-center mb-2">
                            <strong>{{ comment.user.username }}</strong>
                            <small class="text-muted ms-2">{{ comment.createdAt|format_datetime('short', 'short', locale='fr') }}</small>
                        </div>
                        <p>{{ comment.content|raw }}</p>

                        <!-- Bouton Répondre -->
                        {% if app.user %}
                            <button class="btn btn-link reply-link" data-comment-id="{{ comment.id }}">Répondre</button>

                            <!-- Formulaire de réponse caché par défaut -->
                            <div class="reply-form" id="reply-form-{{ comment.id }}" style="display: none;">
                                <form action="{{ path('front_subjects_reply', {'subjectTitle': subject.title, 'commentId': comment.id}) }}" method="post">
                                    <textarea name="content" class="form-control" placeholder="Votre réponse..." required></textarea>
                                    <button type="submit" class="btn btn-secondary mt-2">Envoyer</button>
                                </form>
                            </div>
                        {% endif %}
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
</section>

{% block javascripts %}
<script>
    document.addEventListener('DOMContentLoaded', () => {
        document.querySelectorAll('.reply-link').forEach(button => {
            button.addEventListener('click', (event) => {
                event.preventDefault(); // Empêcher l'action par défaut

                const commentId = button.dataset.commentId;
                const replyForm = document.getElementById(`reply-form-${commentId}`);

                // Basculer l'affichage du formulaire
                if (replyForm) {
                    replyForm.style.display = (replyForm.style.display === 'none' || replyForm.style.display === '') ? 'block' : 'none';
                }
            });
        });
    });
</script>
{% endblock %}
{% endblock %}
