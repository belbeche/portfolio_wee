{% extends "base.html.twig" %}

{% block title %} {{ subject.title }} {% endblock %}

{% block content %}
<section id="content">
    <div class="content-wrap">
        <div class="container mw-md">
            <!-- Détails du sujet -->
            <div class="topic-post">
                <div class="row g-0 justify-content-between align-items-center border-top border-bottom py-3 mb-4">
                    <div class="col-9">
                        <div class="d-flex align-items-center">
                            <img src="{{ asset('uploads/avatar/' ~ subject.user.avatar) }}" 
                                 alt="{{ subject.user.username }}" 
                                 class="rounded-circle me-2" 
                                 width="50" height="50">
                            <div>
                                <h5 class="mb-0 h6 fw-semibold">
                                    <a class="text-dark" href="#">{{ subject.user.username }}</a>
                                </h5>
                                <small class="text-muted">Posté le {{ subject.createdAt|format_datetime('full', 'short', locale='fr') }}</small>
                            </div>
                        </div>
                    </div>
                </div>
                <p>{{ subject.content|raw }}</p>
            </div>

            {# Formulaire de commentaire #}
            <div class="comment-form">
                {{ form_start(form) }}
                {{ form_widget(form.content) }}
                <button type="submit" class="btn btn-primary">Ajouter un commentaire</button>
                {{ form_end(form) }}
            </div>

            <!-- Section des commentaires -->
            <div class="topic-post reply mt-5 p-4 border-top border-width-5 border-color">
                <h3 class="h2 fw-bolder mb-4">Réponses au sujet</h3>
                <!-- Définition de la macro pour afficher les commentaires -->
                {% macro render_comments(comments, replyFormsView) %}
                    {% for comment in comments %}
                        <div class="comment mb-4 border p-3 rounded">
                            <p><strong>{{ comment.user.username }}</strong> : {{ comment.content }}</p>
                            <small class="text-muted">Posté le {{ comment.createdAt|date('d/m/Y à H:i') }}</small>

                            {# Formulaire de réponse #}
                            {% if app.user %}
                                <div class="reply-form mt-3">
                                    <button class="btn btn-outline-primary reply-button" data-comment-id="{{ comment.id }}">Répondre</button>
                                    <div class="reply-container" id="reply-form-{{ comment.id }}">
                                        {{ form_start(replyFormsView[comment.id]) }}
                                        {{ form_widget(replyFormsView[comment.id].content) }}
                                        <button type="submit" class="btn btn-secondary">Envoyer</button>
                                        <button type="button" class="btn btn-danger close-reply-form" data-comment-id="{{ comment.id }}">Fermer</button>
                                        {{ form_end(replyFormsView[comment.id]) }}
                                    </div>
                                </div>
                            {% endif %}

                            {# Affichage des réponses directement sous chaque commentaire #}
                            <div class="replies ms-4 mt-3">
                                {% for reply in comment.replies %}
                                    <div class="reply border p-3 mb-3 rounded">
                                        <p><strong>{{ reply.user.username }}</strong> : {{ reply.content }}</p>
                                        <small class="text-muted">Posté le {{ reply.createdAt|date('d/m/Y à H:i') }}</small>
                                    </div>
                                {% else %}
                                    <p>Aucune réponse pour ce commentaire.</p>
                                {% endfor %}
                            </div>
                        </div>
                    {% endfor %}
                {% endmacro %}
                <div id="comments-section">
                    {{ _self.render_comments(comments, replyFormsView) }}
                </div>
            </div>
        </div>
    </div>
</section>

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Afficher/masquer le formulaire de réponse sans Bootstrap
            document.querySelectorAll('.reply-button').forEach(function(button) {
                button.addEventListener('click', function() {
                    var commentId = button.getAttribute('data-comment-id');
                    var replyForm = document.getElementById('reply-form-' + commentId);
                    if (replyForm) {  // Vérifiez si l'élément existe
                        // Si le formulaire est caché, on l'affiche, sinon on le cache
                        replyForm.style.display = 'block';
                    }
                });
            });

            // Fermer le formulaire de réponse
            document.querySelectorAll('.close-reply-form').forEach(function(button) {
                button.addEventListener('click', function() {
                    var commentId = button.getAttribute('data-comment-id');
                    var replyForm = document.getElementById('reply-form-' + commentId);
                    if (replyForm) {
                        replyForm.style.display = 'none'; // Masquer le formulaire
                    }
                });
            });
        });
    </script>
{% endblock %}

{% endblock %}
