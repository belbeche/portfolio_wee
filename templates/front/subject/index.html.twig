{% extends 'base.html.twig' %}

{% block content %}

	<div class="jumbotron bg-primary mt-7">
		<h3 class="lead text-white text-center">Centre Access</h3>

		<div class="container text-center">
			<hr>
			<a href="{{ url('front_subjects_new') }}" class="btn btn-secondary">Ã‰crire au support</a>
			<a href="{{ url('front_subject_list') }}" class="btn btn-primary">Voir tous les sujets</a>
		</div>
	</div>


	<!-- Assistance start -->
	<div class="container-fluid">
		<section
			id="promo" class="section">
			<!-- blog start -->
			<section class="blog-area pb-5">
				<div class="container">
					<div class="row justify-content-center">
						{% for subject in subjects %}
							<div class="col-lg-3 col-md-3 col-sm-10">
								<div class="single-blog blog-style-one">
									<div class="blog-image">
										<a href="{{ path('front_subjects_show', {'title': subject.title}) }}">
											{#{% for image in subject.images %}
												<img class="card-img-top rounded-0" src="{{ asset('uploads/' ~ image.name) }}" alt="{{ subject.title }}">
											{% endfor %}#}
										</a>
									</div>
									<div class="blog-content">
										<h5 class="blog-title">
											<a href="{{ path('front_subjects_show', {'title': subject.title}) }}">
												<h5 class="card-title">{{ subject.title }}</h5>
											</a>
										</h5>
										{% for categorie in subject.categories %}
											{{ categorie.name }}
										{% endfor %}
										<br>
										<span>
											<i class="bi bi-calendar"></i>
											{{ subject.createdAt|format_datetime('medium', locale="fr") }}</span>
										<span>
											<i class="bi bi-chat-dots"></i>
											{{ subject.commentaires|length }}</span>
										<span><img src="{{ asset('uploads/avatar/' ~subject.user.avatar) }}" alt="{{ subject.user.username }}" class="rounded-0 img-thumbnail" width="50" height="50">
											{{ subject.user.username }}</span>
									</div>
								</div>
							</div>
						{% endfor %}
					</div>
				</div>
			</section>
		</div>
		<!-- ./ End blog start -->
	</div>

	<div class="navigation pagination justify-content-center my-4">
		{{ knp_pagination_render(subjects) }}
	</div>

{% endblock %}
