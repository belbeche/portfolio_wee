{% extends 'base_back.html.twig' %}

{% block title %}
	Admin
{% endblock %}

{% block content %}
	<div class="container mt-4">
		<div class="row">
			<h2 class="col">Articles</h2>

			{% for type, messages in app.flashes %}
				{% for message in messages %}
					<div class="alert alert-{{ type }}">{{ message }}</div>
				{% endfor %}
			{% endfor %}


			<div class="col text-right">
				<a href="{{ url('back_articles_new') }}" class="btn btn-primary">Ajouter un article</a>
			</div>
			<div class="col-12">
				<div class="table-responsive w-100 d-block d-md-table">
					<table class="table">
						<thead class="thead-dark">
							<tr>
								<th scope="col">#</th>
								<th scope="col">Titre</th>
								<th scope="col">Statut</th>
								<th scope="col">Publier le</th>
								<th scope="col">Modifier le</th>
								<th scope="col" style="max-width: 50px; text-align: center">Actions</th>
							</tr>
						</thead>
						<tbody>
							{# We indicate that we are going to increment the values of the items #}
							{% set i = 1 %}
							{% for article in articles %}
								<tr>
									<th scope="row">{{ i }}</th>
									<td>
										<a href="{{ url('back_articles_show', {slug: article.slug}) }}">{{ article.title }}</a>
									</td>
									<td>
										{% if article.isPublished %}
											<small class="badge badge-success">publier</small>
										{% else %}
											<small class="badge badge-warning">brouillon</small>
										{% endif %}
									</td>
									{#<td>{{ article.isPublished ? article.createdAt|format_datetime('full', 'short', locale='fr') }}</td>#}
									<td>{{ article.isPublished ? article.createdAt|format_datetime('full', 'short', locale='fr') }}</td>
									{#
																										<td>{{ article.isPublished|date("d/m/Y", "Europe/Paris") }} à {{ article.isPublished|date("H:m:s", "Europe/Paris") }}</td>
																										#}
									<td>{{ article.isPublished ? article.updatedAt|format_datetime('full', 'short', locale='fr') }}</td>
									<td class="text-center">
										<a href="{{ url('back_articles_edit', {'slug': article.slug}) }}" class="text-success">
											<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 24 24" stroke="currentColor" width="18">
												<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
											</svg>
										</a>
										<a href="{{ url('back_articles_remove', {'slug': article.slug}) }}" class="text-danger" onclick="alert('L\'article est en cours de supprésion !'">
											<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 24 24" stroke="currentColor" width="18">
												<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4"/>
											</svg>
										</a>
									</td>
								</tr>
								{% set i = i+1 %}
							{% endfor %}
						</tbody>
					</table>
				</div>

				<div class="navigation">
					{{ knp_pagination_render(articles) }}
				</div>

			</div>
		</div>
	</div>
{% endblock %}
