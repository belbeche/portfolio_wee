{% extends 'base.html.twig' %}

{% block content %}
<div class="container mt-5">
    <h1 class="mb-4">Relancer le prospect : {{ request.name }}</h1>

    {{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}
        <div class="form-group">
            {{ form_label(form.email) }}
            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.message) }}
            {{ form_widget(form.message, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.attachments) }}
            {{ form_widget(form.attachments, {'attr': {'class': 'form-control-file'}}) }}
        </div>
        <button type="submit" class="btn btn-warning mt-3">Envoyer la relance</button>
    {{ form_end(form) }}
</div>
{% endblock %}
