{% extends "base_back.html.twig" %}

{% block title %}
	back Categorie index
{% endblock %}

{% block content %}

<a href="{{ url('back_category_new') }}" class="ml-auto btn btn-primary">Créer une nouvelle categorie</a>

{% for type, messages in app.flashes %}
	{% for message in messages %}
		<div class="alert alert-{{ type }}">{{ message }}</div>
	{% endfor %}
{% endfor %}

<table class="table-light">
	<thead>
		<tr>
			<th>#</th>
			<th>Nom</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		{% for category in categories %}
			<tr>
				<td>{{ category.id }}</td>
				<td>
					<a href="{{ url('back_category_show', {id: category.id})}}">{{ category.name}}</td>
				</td>
			</tr>
		</a>
		<td>
			<a href="{{ url('back_category_show', {id: category.id})}}">Voir</a>
			<a href="">Editer</a>
			<a href="">Supprimé</a>
		</td>
	</tbody>
</tr>{% endfor %}</tbody></table>{% endblock %}
